server {
    listen 80;
    server_name localhost;

    location = /health {
        access_log off;
        return 204;
    }

    location / {
        root /usr/share/nginx/html/;
        try_files $uri$args $uri$args/ /index.html;
    }

    # redirect server error pages to the static page /50x.html
    #
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
